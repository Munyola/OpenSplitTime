<% content_for :title do %>
  <% "OpenSplitTime: Edit event - #{@form.event.name}" %>
<% end %>

<%= render 'form' %>

<article class="ost-article container">
  <% if current_user.authorized_fully?(@form.event) %>
    <hr>
    <%= link_to_delete_resource('Delete this event', event_path(@form.event),
                                resource: @form.event,
                                noteworthy_associations: [:entrants, :split_times],
                                class: "btn btn-danger") %>
  <% end %>
</article>
