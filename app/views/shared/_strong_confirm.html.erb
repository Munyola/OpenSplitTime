<%= link_to name, '#', options.deep_merge(data: {toggle: 'modal', target: "##{strong_confirm_id}"}) %>

<aside id="<%= strong_confirm_id %>" class="modal fade" role="dialog" data-controller="confirm">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="js-title modal-title">Are you absolutely sure?</h4>
        <button type="button" tabindex="2" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <p class="js-copy"><strong>This action cannot be undone.</strong> This will permanently delete the
          <strong><%= resource.name %></strong> <%= resource.class.model_name.human.downcase %> with all of
          its <%= (noteworthy_associations.map { |e| e.to_s.humanize.downcase } + ['other related information']).to_sentence %>.</p>
        <p class="js-copy">To proceed, type the name of the <%= resource.class.model_name.human.downcase %> below and click the
          Delete button.</p>
      </div>
      <div class="modal-footer">
        <%= text_field_tag 'confirm', nil, class: 'form-control input-block', autofocus: true, tabindex: 1, data: {action: 'keyup->confirm#compare', target: 'confirm.pattern', 'pattern-required' => resource.name} %>
        <%= link_to 'Permanently Delete', path_on_confirm, tabindex: -1, class: 'btn btn-block btn-danger disabled', method: :delete, data: {target: 'confirm.deleteButton'} %>
      </div>
    </div>
  </div>
</aside>
