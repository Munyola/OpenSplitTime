<% content_for :title do %>
  <% "OpenSplitTime: Drop List - #{@presenter.name}" %>
<% end %>

<header class="ost-header">
  <div class="container">
    <div class="ost-heading row">
      <div class="col">
        <div class="ost-title">
          <h1><strong><%= [@presenter.name, nil].compact.join(': ') %></strong></h1>
          <ul class="breadcrumb breadcrumb-ost">
            <li class="breadcrumb-item"><%= link_to 'Organizations', organizations_path %></li>
            <li class="breadcrumb-item"><%= link_to @presenter.organization.name, organization_path(@presenter.organization) %></li>
            <li class="breadcrumb-item"><%= link_to @presenter.event_group.name, event_group_path(@presenter.event_group) %></li>
            <li class="breadcrumb-item active">Drop List</li>
          </ul>
        </div>
      </div>
    </div>
    <!-- Navigation -->
    <%= render 'events/view_buttons', view_object: @presenter %>
  </div>
</header>

<article class="ost-article container">
  <div class="row">
    <div class="col-12">
      <h4><strong>
        <% if @presenter.dropped_efforts_count < 1 %>
          <%= "No entrants have dropped as of #{day_time_current_military_full(@presenter.home_time_zone)}" %>
        <% else %>
          <%= "#{@presenter.dropped_efforts_count} #{@presenter.dropped_efforts_count == 1 ? 'entrant has' : 'entrants have'} dropped as of #{day_time_current_military_full(@presenter.home_time_zone)}" %>
        <% end %>
      </strong></h4>
    </div>
  </div>
  <div>
    <%= render 'efforts/efforts_dropped_list' %>
  </div>
</article>
