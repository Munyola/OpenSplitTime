<%= form_tag event_groups_path, method: :get do %>
    <div class="input-group">
      <span class="input-group-btn">
        <%= text_field_tag :search,
                            params[:search],
                            placeholder: 'Event name',
                            autofocus: true,
                            class: 'form-control search-box form-control-sm' %>
        <%= button_tag(type: :submit, class: 'btn btn-sm btn-success') do %>
            <i class='fa fa-search'></i> Find an event
        <% end %>
      </span>
    </div>
<% end %>
