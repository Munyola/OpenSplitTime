<%= form_tag people_path, method: :get do %>
  <div class="input-group">
    <span class="input-group-btn">
      <%= text_field_tag 'filter[search]',
                          prepared_params[:search],
                          placeholder: 'First name, last name, state, or country',
                          autofocus: true,
                          class: 'form-control search-box form-control-sm' %>
      <%= button_tag(type: :submit, class: 'btn btn-sm btn-success') do %>
          <i class='fa fa-search'></i> Find someone
      <% end %>
    </span>
  </div>
<% end %>
