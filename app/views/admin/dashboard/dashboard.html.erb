<% content_for :title do %>
    OpenSplitTime: Dashboard
<% end %>
<div class="row">
  <div class="col-xs-6">
    <h2><strong>OpenSplitTime Dashboard</strong></h2>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-xs-6">
    <h4>Database Statistics</h4><br/>
    <%= "People: #{Person.all.size}" %><br/>
    <%= "Events: #{Event.all.size} with #{Effort.unreconciled.size} unreconciled efforts" %><br/>
    <%= "Efforts: #{Effort.all.size} with #{Effort.bad.size} bad and #{Effort.questionable.size} questionable" %><br/>
    <%= "Split Times: #{SplitTime.all.size} with #{SplitTime.bad.size} bad and #{SplitTime.questionable.size} questionable" %><br/>
    <%= "Courses: #{Course.all.size}" %><br/>
    <%= "Splits: #{Split.all.size}" %><br/>
    <%= "Users: #{User.all.size}" %><br/>
    <%= "Raw Times: #{RawTime.all.size}" %><br/>
    <%= "Subscriptions: #{Subscription.all.size} consisting of #{Subscription.sms.size} SMS, #{Subscription.email.size} email, #{Subscription.http.size} http, #{Subscription.https.size} https" %><br/>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-xs-6">
    <h4>Actions</h4><br/>
  </div>
</div>
