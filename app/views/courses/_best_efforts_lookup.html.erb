<%= form_tag best_efforts_course_path(@best_display), method: :get do %>
    <%= hidden_field_tag 'split1', @best_display.split1 %>
    <%= hidden_field_tag 'split2', @best_display.split2 %>
    <%= hidden_field_tag 'filter[gender]', @best_display.gender_text %>
    <div class="input-group">
      <%= text_field_tag 'filter[search]',
                          @best_display.search_text,
                          placeholder: 'First name, last name, state, or country',
                          autofocus: true,
                          class: 'form-control search-box' %>
      <span class="input-group-append">
          <%= button_tag(type: :submit, id: 'search-submit', class: 'btn btn-ost btn-primary') do %>
              <i class='fa fa-search'></i>
          <% end %>
        </span>
    </div>
<% end %>
